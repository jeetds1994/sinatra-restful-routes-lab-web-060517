<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Recipe</h1>
    <p><%= @recipe.name %></p>
    <p><%= @recipe.ingredients %></p>
    <p><%= @recipe.cook_time %></p>
